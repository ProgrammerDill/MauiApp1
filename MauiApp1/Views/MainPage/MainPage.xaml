<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="MauiApp1.Views.MainPage.MainPage"
             
             xmlns:vm="clr-namespace:MauiApp1.ViewModels.Pages"
             
             x:DataType="vm:MainPageViewModel">

    <Grid RowDefinitions="100, Auto, 100, 270"
          ColumnDefinitions=".75*"
          Padding="10">

        <Label Text="DILLON RYSON ANAK DONALD BCS23090004"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Padding="10"/>

        <Image Source="corgi.jpeg"
               HeightRequest="350"
               Aspect="AspectFit"
               Grid.Row="1"
               Grid.ColumnSpan="2"
               SemanticProperties.Description="This is a corgi puppy" />

        <Border BackgroundColor="Wheat"
                Stroke="Wheat"
                StrokeShape="RoundRectangle 30"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HeightRequest="150"
                WidthRequest="325">

            <Grid RowDefinitions="30, 30, 50"
                  ColumnDefinitions="30, *, *, 70"
                  Padding="20">

                <Label Text="{Binding PetDetails.Name}"
                       Grid.ColumnSpan="2"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Start"
                       VerticalTextAlignment="Start"/>

                <Image Source="symbolmale.png"
                       Grid.Column="3"
                       HeightRequest="30"
                       HorizontalOptions="End"
                       VerticalOptions="Start"/>

                <Label Text="{Binding PetDetails.Breed}"
                       TextColor="#3f3f3f"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       VerticalOptions="Center"/>

                <Image Source="clock.png"
                       Grid.Row="1"
                       Grid.Column="2"
                       HeightRequest="20"
                       HorizontalOptions="End"
                       VerticalOptions="Center"/>

                <Label Text="{Binding PetDetails.Age}"
                       TextColor="#3f3f3f"
                       Grid.Row="1"
                       Grid.Column="3"
                       HorizontalOptions="End"
                       VerticalOptions="Center"/>

                <Image Source="location.png"
                       Grid.Row="2"
                       HeightRequest="30"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"/>

                <Label Text="{Binding PetDetails.Location}"
                       Grid.Row="2"
                       Grid.Column="1"
                       Grid.ColumnSpan="3"
                       HorizontalTextAlignment="Start"
                       VerticalTextAlignment="Center"/>
            </Grid>
        </Border>

        <Border Grid.Row="3"
                HeightRequest="200"
                WidthRequest="325"
                StrokeShape="RoundRectangle 10">

            <Grid RowDefinitions="*, *, *"
                  ColumnDefinitions="*, 2*, *">

                <Border WidthRequest="55"
                        HeightRequest="55"
                        StrokeShape="RoundRectangle 40"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Background="white">
                    <Image Source="mai.png"
                           Aspect="AspectFill"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Border>

                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                    <Label Text="{Binding PetDetails.OwnerName}"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Start"
                           VerticalTextAlignment="Center"/>

                    <Label Text="Owner"
                           FontSize="10"
                           TextColor="Gray"/>
                </VerticalStackLayout>

                <Label Text="{Binding PetDetails.PostedDate}"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center"
                       Grid.Column="2"
                       Margin="10"
                       FontSize="12"/>

                <Label Text="{Binding PetDetails.Description}"
                       Grid.Row="1"
                       Grid.ColumnSpan="3"
                       Margin="10,0,10,0"
                       VerticalTextAlignment="Center"/>

                <Border WidthRequest="45"
                        HeightRequest="45"
                        Grid.Row="2"
                        StrokeShape="RoundRectangle 40"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">

                    <Button 
                        Command="{Binding ToggleFavouriteCommand}"
                        BackgroundColor="{Binding FavouriteButtonColor}"
                        ImageSource="favorite.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        CornerRadius="50"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Toggles favorite status"/>
                </Border>

                <Button 
                    Command="{Binding AdoptCommand}"
                    Text="{Binding AdoptButtonText}"
                    BackgroundColor="#FFC107"
                    TextColor="Black"
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    HeightRequest="40"
                    WidthRequest="230"
                    CornerRadius="50"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="0,0,20,0"/>
            </Grid>

        </Border>

    </Grid>

</ContentPage>